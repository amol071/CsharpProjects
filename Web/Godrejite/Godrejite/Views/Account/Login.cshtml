<!-- Views/Account/Login.cshtml -->
@model Godrejite.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <!-- Logo Section -->
                        <img src="~/Content/Images/logo.jpeg" class="img-fluid" alt="Logo" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h2 class="card-title">Login</h2>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control custom-input w-100" })
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control custom-input w-100" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                                    </div>
                                </div>
                            }
                            <p>
                                <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link">Forgot Your Password?</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-input {
        border-top: none;
        border-left: none;
        border-right: none;
        border-radius: 0;
        box-shadow: none;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
    }
</style>
